@{
    ViewData["Title"] = "Discharge Patients";
    Layout = "_LayoutNurse";
}
@model DEMO.Models.NurseModels.AdmittedPatientsModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admissions List</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <style>
        .container {
            padding-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1200px">
                <div class="col">
                    <div class="p-3 mt-2 border">

                        <form>
                            <h2>Discharge List</h2>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label for="searchInput" class="form-label">Name or Surname</label>
                                    <input type="text" class="form-control" id="searchInput" placeholder="Name or Surname" style="width:300px">
                                </div>
                                <div class="col-4 align-self-end">
                                    <button type="submit" asp-action="AdmittedPatients" asp-controller="Nurse" class="btn btn-primary" style="width:70px">Search</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row" style="width:1200px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <table id="example" class="display" style="width:100%">
                            <thead>
                                <tr>
                                    
                                    <th scope="col">Name</th>
                                    <th scope="col">Surname</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Time</th>
                                    <th scope="col">Ward</th>
                                    <th scope="col">Bed</th>
                                    <th scope="col">Number</th>
                                    <th scope="col">Nurse FullName</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <tr>
                                        <td>0120526958</td>
                                        <td>Jin</td>
                                        <td>Woo</td>
                                        <td>25/05/2025</td>
                                        <td>08:00 AM</td>
                                        <td>Cardiology</td>
                                        <td>101</td>
                                        <td>12345</td>
                                        <td>Ariana Grande</td>
                                        <td>

                                            <input type="button" name="discharge" class="next action-button" value="Discharge" id="dischargeButton" / >

                                        </td>
                                    </tr>
                                   
                                
                                   
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </main>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="dischargeModal" tabindex="-1" aria-labelledby="dischargeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="dischargeModalLabel">Confirm Discharge</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to discharge this patient?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDischargeButton">Yes, Discharge</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            // Show the modal when the discharge button is clicked
            $('#dischargeButton').click(function () {
                $('#dischargeModal').modal('show');
            });

            // Close the modal when cancel or close button is clicked
            $('.btn-secondary, .close').click(function () {
                $('#dischargeModal').modal('hide');
            });

            // Perform the discharge operation when 'Yes, Discharge' is clicked
            $('#confirmDischargeButton').click(function () {
                // Hide the modal
                $('#dischargeModal').modal('hide');

                // Perform any additional actions here, like submitting a form or updating the UI
                alert('Patient discharged successfully.');
            });
        });
    </script>
    </script>
</body>
</html>