Surgery Bookings@{
    ViewData["Title"] = "Surgery Bookings";
    Layout = "_LayoutNurse";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Surgery Bookings</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <style>
        #example {
        }
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1200px">
                <div class="col">
                    <div class="p-3 mt-2 border">

                        <form>
                            <h2>Surgery Bookings</h2>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label for="searchInput" class="form-label">Name or Surname</label>
                                    <input type="text" class="form-control" id="searchInput" placeholder="Name or Surname" style="width:300px">
                                </div>
                                <div class="col-4 align-self-end">
                                    <button type="submit" asp-action="AdmittedPatients" asp-controller="Nurse" class="btn btn-primary" style="width:70px">Search</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </main>
    </div>
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                "language": {
                    "zeroRecords": "No matching records found"
                }
            });

            $('#searchInput').on('keyup', function () {
                var searchText = this.value.trim();
                if (searchText === '') {
                    $('#example').hide();
                } else {
                    $('#example').show();
                    table.search(searchText).draw();
                    if (table.page.info().recordsDisplay === 0) {
                        $('#example').hide();
                    }
                }
            });
        });
    </script>
</body>
</html>