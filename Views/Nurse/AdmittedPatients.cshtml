@model DEMO.ViewModels.AdmissionsListViewModel
@{
    ViewData["Title"] = "Patient Records";
    Layout = "_LayoutNurse";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Records</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <style>
        .container {
            padding-top: 50px;
        }
        
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1200px">
                <div class="col">
                    <div class="p-3 mt-2 border">

                        <form>
                            <h2>Admissions List</h2>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label for="searchInput" class="form-label">Name or Surname</label>
                                    <input type="text" class="form-control" id="searchInput" placeholder="Name or Surname" style="width:300px">
                                </div>
                                <div class="col-4 align-self-end">
                                    <button type="submit" asp-action="AdmittedPatients" asp-controller="Nurse" class="btn btn-primary" style="width:70px">Search</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row" style="width:1200px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <table id="example" class="display" style="width:100%">
                            <thead>
                                <tr>

                                    <th scope="col">Name</th>
                                    <th scope="col">Surname</th>
                                    <th scope="col">Surgeon Name</th>
                                    <th scope="col">Surgery Date</th>
                                    <th scope="col">Surgery Time</th>
                                    <th scope="col">Theatre</th>
                                    <th scope="col">Ward Name</th>
                                    <th scope="col">Bed Number</th>
                                    <th scope="col">Admitted Time</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.AllcombinedData != null && Model.AllcombinedData.Count > 0)
                                {
                                    @foreach (var Data in Model.AllcombinedData)
                                    {
                                        <tr>
                                            <td>@Data.Name</td>
                                            <td>@Data.Surname</td>
                                            <td>@Data.SurgeonName @Data.SurgeonSurname</td>
                                            <td>@Data.SurgeryDate</td>
                                            <td>@Data.SurgeryTime</td>
                                            <td>@Data.Theater</td>
                                            <td>@Data.WardName</td>
                                            <td>@Data.BedNumber</td>
                                            <td>@Data.Time</td>
                                            <td>
                                                <a class="btn btn-primary" aria-hidden="true" asp-controller="Nurse" asp-action="PatientRecords" asp-route-AdmittedPatientID="@Data.AdmittedPatientID">Patient Information</a>
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" aria-hidden="true" asp-controller="Nurse" asp-action="Medication Administration" asp-route-AdmittedPatientID="@Data.AdmittedPatientID">Administer Medication</a>
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" aria-hidden="true" asp-controller="Nurse" asp-action="Vitals" asp-route-AdmittedPatientID="@Data.AdmittedPatientID">Retake Vitals</a>
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" aria-hidden="true" asp-controller="Nurse" asp-action="MedicationCollection" asp-route-AdmittedPatientID="@Data.AdmittedPatientID">Collect Medication</a>
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" aria-hidden="true" asp-controller="Nurse" asp-action="DischargeList" asp-route-AdmittedPatientID="@Data.AdmittedPatientID">Discharge</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                
                            </tbody>
                        </table>
                                    
                                    
                               
                    </div>
                </div>
            </div>

        </main>
    </div>
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                "language": {
                    "zeroRecords": "No matching records found"
                }
            });

            
            function filterTable() {
                var searchText = $('#searchInput').val().trim();
                var dateText = $('#dateInput').val();

                // Apply date filter on column 3 and general search
                table.column(3).search(dateText ? dateText : '', true, false);
                table.search(searchText).draw();

                // Hide or show the table based on the input
                if (searchText === '' && dateText === '') {
                    $('#example').hide();
                } else {
                    $('#example').show();
                    if (table.page.info().recordsDisplay === 0) {
                        $('#example').hide();
                    }
                }
            }
            $('#searchInput, #dateInput').on('keyup change', filterTable);
        });
    </script>
</body>
</html>