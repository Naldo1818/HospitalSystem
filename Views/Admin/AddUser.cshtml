@{
    ViewData["Title"] = "Medication Add";
    Layout = "_LayoutAdmin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Medication Add</title>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <form>
                            <div class="form-group row">
                                <div class="col-4">
                                    <h1>Add Users</h1>
                                    <br>
                                    <label for="medicationAmount" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="medicationAmount" placeholder="Name" style="width:300px">
                                </div>
                                <div class="col-4">
                                    <br>
                                    <label for="medicationAmount" class="form-label">Surname</label>
                                    <input type="text" class="form-control" id="medicationAmount" placeholder="Surname" style="width:300px">
                                </div>
                                <div class="col-4">
                                    <br>
                                    <label for="medicationAmount" class="form-label">Password</label>
                                    <input type="text" class="form-control" id="medicationAmount" placeholder="Password" style="width:300px">
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <label for="medicationAmount" class="form-label">Password</label>
                                    <input type="text" class="form-control" id="medicationAmount" placeholder="Password" style="width:300px">
                                </div>
                                <div class="col-4">
                                    <br>
                                    <label for="medicationAmount" class="form-label">Contact Number</label>
                                    <input type="text" class="form-control" id="medicationAmount" placeholder="Contact Number" style="width:300px">
                                </div>
                                <div class="col-4">
                                    <br>
                                    <label for="medicationAmount" class="form-label">Email</label>
                                    <input type="text" class="form-control" id="medicationAmount" placeholder="Email" style="width:300px">
                                </div>
                            </div>

                            <div class="form-group row">
                              
                                    <div class="col-4">
                                        <br>
                                        <label for="gender" class="form-label">Role</label>
                                        <div id="role" class="form-control" style="width:300px; padding: 10px;">
                                            <div class="form-check">
                                            <input class="form-check-input" type="radio" name="role" id="Surgeon" value="Surgeon">
                                            <label class="form-check-label" for="Surgeon">Surgeon</label>
                                            </div>

                                            <div class="form-check">
                                            <input class="form-check-input" type="radio" name="role" id="Pharmacist" value="Pharmacist">
                                            <label class="form-check-label" for="Pharmacist">Pharmacist</label>
                                            </div>

                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="role" id="Nurse" value="Nurse">
                                            <label class="form-check-label" for="Nurse">Nurse</label>
                                        </div>
                                        </div>
                                    </div>
                          
                               
                            </div>
                            <div class="form-group row">
                            <div class="col-4">
                                <br>
                                <button class="btn btn-primary" style="width:100px" type="submit">Save User</button>
                            </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        
        </main>
    </div>
</body>
</html>
