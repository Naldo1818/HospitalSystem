@{
    ViewData["Title"] = "Medication Add";
    Layout = "_LayoutAdmin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

    <title>Medication Add</title>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:auto">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <form>
                            <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <label for="medicationName" class="form-label">Medication Name</label>
                                    <input type="text" class="form-control" id="medicationName" placeholder="Add Medication" style="width:300px">
                                </div>
                                <div class="col-4">
                                    <!-- Update Form -->
                                    <br>
                                    <label for="medicationForm" class="form-label">Medication Form</label>
                                    <select class="form-control" id="medicationForm" style="width:300px">
                                        <option value="Tablets">Tablets</option>
                                        <option value="Capsules">Capsules</option>
                                        <option value="Suspension">Suspension</option>
                                        <option value="Syrup">Syrup</option>

                                        <option value="Lotion">Lotion</option>
                                        <option value="Spray">Spray</option>
                                        <option value="Gel">Gel</option>

                                        <option value="Suppository">Suppository</option>
                                        <option value="Injectable">Injectable</option>
                                        <option value="IV Drip">IV Drip</option>
                                        <option value="Drops">Drops</option>
                                      
                                    </select>
                                </div>
                                <div class="col-4">
                                    <br>
                                    <label for="schedule" class="form-label">Schedule</label>
                                    <input type="text" class="form-control" id="schedule" placeholder="Add Amount" style="width:300px">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <button class="btn btn-danger" style="width:70px" type="submit" asp-action="Index" asp-controller="Home">Back</button>
                                    <button class="btn btn-primary" style="width:70px" type="submit">Next</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row" style="width:auto">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <table id="medicationTable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Medication Name</th>
                                    <th scope="col">Medication Form</th>
                                    <th scope="col">Schedule</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Advil</td>
                                    <td>Tablets</td>
                                    <td>6</td>
                                    <td>
                                        <a class="btn btn-danger" href="#">Remove</a>
                                        <a class="btn btn-primary" href="#">Active Ingredients</a>
                                        <!-- Add Active imgredient MODAL-->
                                    </td>
                                   
                                </tr>
                                <!-- Additional rows can be added here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <script>
                $(document).ready(function () {
                    $('#medicationTable').DataTable();
                });
            </script>
        </main>
    </div>
</body>
</html>
