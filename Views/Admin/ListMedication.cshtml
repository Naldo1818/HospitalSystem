@{
    ViewData["Title"] = "Medication Add";
    Layout = "_LayoutAdmin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

    <title>Medication Add</title>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:auto">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <form>
                            <div class="form-group row">
                                <div class="col-4">
                                    <h1>Medication Page</h1>
                                </div>
                            </div>
                                <div class="form-group row">
                                
                                <div class="col-4">
                                     <label for="medicationName" class="form-label">Medication Name</label>
                                    <input type="text" class="form-control" id="medicationName" placeholder="Add Medication" style="width:300px">
                                </div>
                                <div class="col-4">
                                    <!-- Update Form -->
                                    
                                    <label for="medicationForm" class="form-label">Medication Form</label>
                                    <select class="form-control" id="medicationForm" style="width:300px">
                                        <option value="Tablets">Tablets</option>
                                        <option value="Capsules">Capsules</option>
                                        <option value="Liquids">Liquids</option>
                                        <option value="Topical">Topical</option>
                                        <option value="Patches">Patches</option>
                                        <option value="Suppositories">Suppositories</option>
                                        <option value="Inhalers">Inhalers</option>
                                        <option value="Powders">Powders</option>
                                        <option value="Drops">Drops</option>
                                        <option value="Injectable Solutions">Injectable Solutions</option>
                                    </select>
                                </div>
                                <div class="col-4">
                                    
                                    <label for="schedule" class="form-label">Schedule</label>
                                    <input type="text" class="form-control" id="schedule" placeholder="Add Amount" style="width:300px">
                                </div>
                                <div class="form-group row">
                                    <div class="col-4">
                                        <br />
                                        <button class="btn btn-primary" style="width:100px" type="submit">Add </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row" style="width:auto">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <table id="medicationTable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Medication Name</th>
                                    <th scope="col">Medication Form</th>
                                    <th scope="col">Schedule</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Advil</td>
                                    <td>Tablets</td>
                                    <td>6</td>
                                    <td>
                                        <a class="btn btn-danger"> Remove</a>
                                        <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#activeIngredientModal">Active Ingredients</a>
                                    </td>

                                </tr>
                                <!-- Additional rows can be added here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Modal Structure -->
            <div class="modal fade modal-lg" id="activeIngredientModal" tabindex="-1" aria-labelledby="activeIngredientModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="activeIngredientModalLabel">Enter Active Ingredient Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="activeIngredientForm">
                                <div class="form-group row">
                                    <div class="col-4">
                                        <label for="ingredientName" class="form-label">Active Ingredient Name</label>
                                        <input type="text" class="form-control" id="ingredientName" style="width:250px" name="ingredientName" required>
                                        <div class="invalid-feedback">
                                            Please provide the ingredient name.
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <label for="ingredientStrength" class="form-label">Active Ingredient Strength</label>
                                        <input type="number" class="form-control" id="ingredientStrength" name="ingredientStrength" style="width:250px" required>
                                        <div class="invalid-feedback">
                                            Please provide the ingredient strength.
                                        </div>
                                    </div>
                                </div>
                                    <div class="form-group row">
                                    <div class="col-4">
                                        <br />
                                        <button class="btn btn-primary" type="button">Add </button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="p-3 mt-5 border">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Medication Name</th>
                                                        <th>Active Ingredient Name</th>
                                                        <th>Active Ingredient Strength</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="ingredientTableBody">
                                                    <tr>
                                                        <td>Acetaminophen</td>
                                                        <td>Acetaminophen</td>
                                                        <td>500 mg</td>
                                                        <td>
                                                            <button class="btn btn-danger">Delete</button>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          
                        </div>
                    </div>
                </div>
            </div>
            <script>
                $(document).ready(function () {
                    $('#medicationTable').DataTable();
                });
            </script>
        </main>
    </div>
</body>
</html>
