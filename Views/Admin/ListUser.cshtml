                                    <td>emily.jones@example.com</td>
                                    <td>Nurse</td>
                                    <td>
                                        <button class="btn btn-primary">Edit</button>
                                        <button class="btn btn-danger">Deactivate</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <script>
                $(document).ready(function () {
                    $('#medicationTable').DataTable();
                });
            </script>
        </main>
    </div>
</body>
</html>
