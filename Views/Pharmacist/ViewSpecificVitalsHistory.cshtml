@{
    ViewData["Title"] = "Individual Patient Vitals History";
}





<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>





<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                    </div>
                </div>
            </div>




            <form>


                <div class="form-group row">
                    <div class="col-4">
                        <br>
                        <label for="exampleFormControlInput1" class="form-label">Patient Name</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Jin" style=" width:300px">

                        <label for="exampleFormControlInput1" class="form-label">Patient Surname</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Woo" style=" width:300px">

                        <label for="exampleFormControlInput1" class="form-label">BP: 120/80 mmHg </label>
                        <label for="exampleFormControlInput1" class="form-label">Time taken: 08:00</label>


                        <label for="exampleFormControlInput1" class="form-label">Heart rate: 70 bpm</label>
                        <label for="exampleFormControlInput1" class="form-label">Time taken: 08:15</label>


                        <label for="exampleFormControlInput1" class="form-label">Blood oxygen level: 100%</label>
                        <label for="exampleFormControlInput1" class="form-label">Time taken: 08:25</label>


                        <label for="exampleFormControlInput1" class="form-label">Respiratory rate: 18 breaths per minute</label>
                        <label for="exampleFormControlInput1" class="form-label">Time taken: 08:30</label>

                        <label for="exampleFormControlInput1" class="form-label">Height: 160 cm</label>
                        <label for="exampleFormControlInput1" class="form-label">Time taken: 08:45</label>

                        <label for="exampleFormControlInput1" class="form-label">Weight: 60 kg</label>
                        <label for="exampleFormControlInput1" class="form-label">Time taken: 08:50</label>




                    </div>

                </div>



                <div class="form-group row">
                    <div class="col-4">
                        <br>

                        <a asp-action="ViewAllActivePrescriptionsPage" asp-controller="Pharmacist" class="btn btn-primary btn-lg">Back</a>


                    </div>
                </div>
                <!-- More form inputs can be added here -->
            </form>






        </main>
    </div>




</body>





</html>







