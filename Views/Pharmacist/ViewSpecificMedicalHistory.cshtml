@{
    ViewData["Title"] = "Individual Medical History";
}





<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>





<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                    </div>
                </div>
            </div>




            <form>
                

                <div class="form-group row">
                    <div class="col-4">
                        <br>
                        <label for="exampleFormControlInput1" class="form-label">Patient Name</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Jin" style=" width:300px">

                        <label for="exampleFormControlInput1" class="form-label">Patient Surname</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Woo" style=" width:300px">


                        <label for="exampleFormControlInput1" class="form-label">Prescription Date</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="14/05/2024" style=" width:300px">


                        <label for="exampleFormControlInput1" class="form-label">Urgent</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Yes" style=" width:300px">

                        <label for="exampleFormControlInput1" class="form-label">Medications Prescribed</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Cephalexin & Diazepem" style=" width:300px">

                        <label for="exampleFormControlInput1" class="form-label">Number of packs to dispense</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Cephalexin-1 & Diazepem-2" style=" width:300px">


                        <label for="exampleFormControlInput1" class="form-label">Amount to take</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder=" Cephalexin- 2 & Diazepem 1" style=" width:300px">

                        <label for="exampleFormControlInput1" class="form-label">Daily Amount</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Cephalexin -1 & Diazepem - 3" style=" width:300px">

                        <label for="exampleFormControlInput1" class="form-label">Take medication before or after eating?</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Cephalexin- After,Diazepem-Before" style=" width:300px">


                        <label for="exampleFormControlInput1" class="form-label">Reason for medication</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Flu" style=" width:300px">

                        <label for="exampleFormControlInput1" class="form-label">Surgeon</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Jack Black" style=" width:300px">


                        
                    </div>

                </div>



                <div class="form-group row">
                    <div class="col-4">
                        <br>
                        <a asp-action="DispenseMedication" asp-controller="Pharmacist" class="btn btn-danger btn-lg">Approve </a>
                        <a asp-action="RejectScript" asp-controller="Pharmacist" class="btn btn-primary btn-lg">Reject</a>
                        <a asp-action="ViewAllActivePrescriptionsPage" asp-controller="Pharmacist" class="btn btn-primary btn-lg">Back</a>


                    </div>
                </div>
                <!-- More form inputs can be added here -->
            </form>






        </main>
    </div>




</body>





</html>







