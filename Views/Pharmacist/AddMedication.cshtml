@{
    ViewData["Title"] = "Medication Add";
    Layout = "_LayoutPharmacist";
}

@model DEMO.ViewModels.PharmacyMedicationViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

    <style>
        table {
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid black;
            padding: 10px;
        }
    </style>


    <title>Medication Add</title>
</head>
<body>

    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:auto">
                <div class="col">
                    <div class="p-3 mt-5 border" style="background-color: white;">





                        <form asp-action="AddMedication">
                            <div class="form-group row">
                                <div class="col-12">
                                    <center><h1>Add Medication</h1></center>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-4">
                                    <h2>Medication Section</h2>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label for="MedicationName" class="form-label">Medication Name</label>
                                    <input type="text" class="form-control" id="MedicationName" name="MedicationName" asp-for="MedicationName" style="width:300px">
                                    <span asp-validation-for="MedicationName" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label for="DosageForm" class="form-label">Dosage Form</label>
                                    <select class="form-control" name="DosageForms" id="DosageForms" asp-for="MedicationForm" style="width:300px">


                                        @foreach (var item in Model.DosageForms)
                                        {
                                            <option value="@item">@item</option>
                                            // Adjust properties based on your model
                                        }
                                    </select>
                                    <span asp-validation-for="MedicationForm" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label for="Schedule" class="form-label">Schedule</label>
                                    <select class="form-control" name="Schedules" id="Schedules" asp-for="Schedule" style="width:300px">

                                        
                                        @foreach (var item in Model.Schedules)
                                        {
                                            <option value="@item">@item</option>
                                            // Adjust properties based on your model
                                        }
                                    </select>
                                    
                                    <span asp-validation-for="Schedule" class="text-danger"></span>
                                </div>


           
                                <div class="col-md-4">
                                    <label for="StockonHand" class="form-label">Stock on Hand</label>
                                    <input type="number" class="form-control" id="StockonHand" name="StockonHand" asp-for="StockonHand" value="@Model.StockonHand" style="width:300px">
                                    <span asp-validation-for="StockonHand" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label for="ReorderLevel" class="form-label">Re-order Level</label>
                                    <input type="number" class="form-control" id="ReorderLevel" name="ReorderLevel" asp-for="ReorderLevel" style="width:300px">
                                    <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                                </div>



                            </div>
                            <br />
                            <!--Multiple active ingredient section-->

                            <h2>Active Ingredients Section</h2>

                            <table id="ingredientsTable">
                                <thead>
                                    <tr>
                                        <th>Ingredient</th>
                                        <th>Strength</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tableBody">
                                    <tr>
                                        <td><input type="text" id="ingredient" placeholder="Ingredient Name"></td>
                                        <td><input type="text" id="strength" placeholder="Strength"></td>
                                        <td><button onclick="addRow()">Add</button></td>
                                    </tr>
                                </tbody>
                            </table>

                            <button onclick="saveIngredients()">Save Ingredients</button>


                            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                            <script>
                                let ingredients = [];

                                function addRow() {
                                    const ingredient = document.getElementById('ingredient').value;
                                    const strength = document.getElementById('strength').value;

                                    if (ingredient && strength) {
                                        const newRow = `
                                                <tr>
                                                    <td>${ingredient}</td>
                                                    <td>${strength}</td>
                                                    <td><button onclick="removeRow(this)">Remove</button></td>
                                                </tr>
                                            `;

                                        $('#tableBody').append(newRow);
                                        document.getElementById('ingredient').value = '';
                                        document.getElementById('strength').value = '';
                                    }
                                }

                                function removeRow(row) {
                                    $(row).closest('tr').remove();
                                }

                                function saveIngredients() {
                                    const tableRows = $('#tableBody tr');
                                    ingredients = [];

                                    tableRows.each(function (index, row) {
                                        if (index > 0) { // Skip the first row which is the input fields
                                            const ingredient = $(row).find('td:eq(0)').text();
                                            const strength = $(row).find('td:eq(1)').text();
                                            ingredients.push({ ingredient, strength });
                                        }
                                    });

                                    console.log(ingredients);
                                    // Here you can send the ingredients array to your backend to save it
                                    $.ajax({
                                        type: 'POST',
                                        url: '/save-ingredients',
                                        data: JSON.stringify(ingredients),
                                        contentType: 'application/json',
                                        success: function (data) {
                                            console.log('Ingredients saved successfully');
                                        },
                                        error: function (xhr, status, error) {
                                            console.log('Error saving ingredients: ' + error);
                                        }
                                    });
                                }
                            </script>




                            <div class="form-group row">
                                <div class="col-12 text-center">
                                    <button type="submit" class="btn btn-primary">Add Medication</button>
                                </div>
                            </div>


                        </form>

                    










                    </div>
                </div>
            </div>

            <div class="row" style="width:auto">
                <div class="col">
                    <div class="p-3 mt-5 border" style="background-color: white;">
                        <table id="medicationTable" class="table table-striped">
                            <thead>

                                <tr>
                                    <th scope="col">Medication Name</th>
                                    <th scope="col">Dosage Form</th>
                                    <th scope="col">Schedule</th>
                                    <th scope="col">Stock on Hand</th>
                                    <th scope="col">Reorder level</th>
                                    <th scope="col">IngredientsandStrengths</th>
                                </tr>
                            </thead>
                            <tbody id="medicationsBody">

                                @* @foreach (var item in Model.)
                                {
                                    <tr>@item</tr>
                                } *@
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>



        </main>
    </div>
</body>
</html>








