@{ 
    ViewData["Title"] = "Individual Prescription";
    Layout = "_LayoutPharmacist";
} 

 @model DEMO.ViewModels.PharmacistViewScriptModel 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription View</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

    <style>
        .form-container {
            padding: 20px;
            border: 1px solid #dee2e6;
            border-radius: .375rem;
            margin-bottom: 20px;
        }
        .form-title {
            text-align: center;
            margin-bottom: 20px;
        }
        .container-fluid {
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center"> </h1>
        

        <!-- Vitals History -->

        <section class="mt-5">




            <h2 class="text-center">Vitals</h2>

            <table class="display">
                <thead>
                    <tr>
                        <th scope="col">Time Taken</th>
                        <th scope="col">Height(cm)</th>
                        <th scope="col">Weight(kg)</th>
                        <th scope="col">Systolic Blood Pressure (mmHg)</th>
                        <th scope="col">Distolic Blood Pressure (mmHg)</th>
                        <th scope="col">Heart Rate (bpm)</th>
                        <th scope="col">Blood Oxygen %</th>
                        <th scope="col">Respiration Rate (bpm)</th>
                        <th scope="col">Blood Glucose Level (mg/dL)</th>
                        <th scope="col">Temperature °C</th>
                        

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Allvitals)
                    {
                        <tr>

                            <td>@item.Time</td>
                            <td>@item.Height</td>
                            <td>@item.Weight</td>
                            <td>@item.SystolicBloodPressure</td>
                            <td>@item.DiastolicBloodPressure</td>
                            <td>@item.HeartRate</td>
                            <td>@item.BloodOxygen</td>
                            <td>@item.Respiration</td>
                            <td>@item.BloodGlucoseLevel</td>
                            <td>@item.Temperature</td>
                            
                        </tr>
                    }
                </tbody>

            </table>



        </section>
       








        <!-- Medical History -->


        <form >
          
            <h2 class="text-center">Medical History</h2>
            <div class="form-group row">
                <div class="col-md-4">
                    <label  class="form-label">Conditions</label>
                    <select class="form-control"  style="width:300px">
                        @foreach (var item in Model.AllConditions)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>


                    
                </div>

                <div class="col-md-4">
                    <label class="form-label">Current medicatons</label>
                    <select class="form-control" style="width:300px">
                        @foreach (var item in Model.AllCurrentMed)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>


                    
                </div>


                <div class="col-md-4">
                    <label class="form-label">Allergies</label>
                    <select class="form-control"  style="width:300px">
                        @foreach (var item in Model.Allallergy)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>



                </div>


              

            </div>




        </form>
        

        


        


            <!-- Prescription Form -->
            
            
            <section class="mt-5">
        <h2 class="text-center">Prescription Details</h2>

        <table class="display">
            <thead>
                <tr>
                    <th scope="col">Administration Instructions</th>
                    <th scope="col">Urgent?</th>
                    <th scope="col">Status</th>
                   


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PrescrptionDetails)
                {
                    <tr>

                        <td>@item.Take</td>
                        <td>@item.Urgency</td>
                        <td>@item.Status</td>

                        

                    </tr>
                }
            </tbody>

        </table>



                 

            <a asp-action="MedicationDispensed" asp-controller="Pharmacist" class="btn btn-danger ">Dispense</a>
        <a asp-action="RejectScript" asp-controller="Pharmacist" class="btn btn-primary" asp-route-id="@Model.PrescriptionID">Reject</a>
@*             <a asp-action="ViewAllActivePrescriptionsPage" asp-controller="Pharmacist" class="btn btn-primary ">Back</a>
 *@               
            
</section>

        

        
