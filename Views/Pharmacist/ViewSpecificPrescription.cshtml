    <script>
        $(document).ready(function () {
            $('#rejectButton').on('click', function (e) {
                e.preventDefault();
                $('#rejectModal').modal('show');
            });

            $('#confirmReject').on('click', function () {
                const prescriptionId = $('#rejectButton').data('prescription-id');
                const reason = $('#rejectionReason').val();

                // Validate reason
                if (reason.trim() === "") {
                    alert("Please enter a reason for rejection.");
                    return;
                }

                // Submit the rejection reason
                $.ajax({
                    url: '@Url.Action("RejectScript", "Pharmacist")',
                    type: 'POST',
                    data: { id: prescriptionId, reason: reason },
                    success: function (response) {
                        $('#rejectModal').modal('hide');
                        // Optionally, show a success message or reload the page
                        alert("Prescription rejected successfully.");
                        location.reload();
                    },
                    error: function () {
                        alert("An error occurred while rejecting the prescription.");
                    }
                });
            });
        });
    </script>
