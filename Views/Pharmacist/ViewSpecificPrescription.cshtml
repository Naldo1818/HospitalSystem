    <button id="rejectBtn">Reject</button>

    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h3>Reason for Rejection</h3>
            <textarea id="reason" rows="4" placeholder="Enter your reason here..."></textarea><br>
            <button id="submitReason">Submit</button>
        </div>
    </div>

    <script>
        const modal = document.getElementById("myModal");
        const btn = document.getElementById("rejectBtn");
        const span = document.getElementsByClassName("close")[0];
        const submitBtn = document.getElementById("submitReason");

        btn.onclick = function () {
            modal.style.display = "block";
        }

        span.onclick = function () {
            modal.style.display = "none";
        }

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        submitBtn.onclick = function () {
            const reason = document.getElementById("reason").value;
            if (reason.trim() === "") {
                alert("Please provide a reason for rejection.");
            } else {
                alert("Application rejected for the following reason: " + reason);
                modal.style.display = "none";
                document.getElementById("reason").value = ""; // Clear the textarea
            }
        }
    </script>
