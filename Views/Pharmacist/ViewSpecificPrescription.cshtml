@{ 
    ViewData["Title"] = "Individual Prescription";
    Layout = "_LayoutPharmacist";
} 

 @model DEMO.ViewModels.PharmacistViewScriptModel 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription View</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

    <style>
        .form-container {
            padding: 20px;
            border: 1px solid #dee2e6;
            border-radius: .375rem;
            margin-bottom: 20px;
        }
        .form-title {
            text-align: center;
            margin-bottom: 20px;
        }
        .container-fluid {
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">@Html.DisplayFor(m => m.patientname) @Html.DisplayFor(m=> m.patientsurname) </h1>
        


       








        <!-- Medical History -->
        
    <section class="mt-5">
         <div class="form-container">
                    <form>
                        <h2 class="text-center">Medical History</h2>
                        <div class="form-group row">
                            <div class="col-4 mb-3">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col"> Conditions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.combinedData)
                                    {
                                        <tr>
                                            <td>@item.Condition</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                               
                                
                              
                            </div>

                            <div class="col-4 mb-3">
                               



                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col"> Current Medications</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.combinedData)
                                    {
                                        <tr>
                                            <td>@item.patientMedication</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            </div>

                            <div class="col-4 mb-3">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col"> Allergies</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.combinedData)
                                    {
                                        <tr>
                                            <td>@item.allergy</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            </div>
                        </div>
                    </form>
                
                </div>
              

                
            </div>
           

                </section>
        

        


        <!-- Vitals History -->

        <section class="mt-5">



            <div class="form-container">
                <form>
                    <h2 class="text-center">Vitals</h2>
                    <div class="form-group row">

                        <div class="col-4 mb-3">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col"> Height</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.combinedData)
                                    {
                                        <tr>
                                            <td>@item.Height</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>



                        </div>

                            <div class="col-4 mb-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col"> Weight</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.combinedData)
                                        {
                                            <tr>
                                                <td>@item.Weight</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>



                            </div>


                            <div class="col-4 mb-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col"> Systolic Blood Pressure</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.combinedData)
                                        {
                                            <tr>
                                                <td>@item.SystolicBloodPressure</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>



                            </div>

                            <div class="col-4 mb-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col"> Diastolic Blood Pressure</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.combinedData)
                                        {
                                            <tr>
                                                <td>@item.DiastolicBloodPressure</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>



                            </div>


                            <div class="col-4 mb-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col"> Heart Rate</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.combinedData)
                                        {
                                            <tr>
                                                <td>@item.HeartRate</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>



                            </div>



                            <div class="col-4 mb-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col"> Blood Oxygen</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.combinedData)
                                        {
                                            <tr>
                                                <td>@item.BloodOxygen</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>



                            </div>


                            <div class="col-4 mb-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col"> Respiration</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.combinedData)
                                        {
                                            <tr>
                                                <td>@item.Respiration</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>



                            </div>

                            <div class="col-4 mb-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col"> BloodGlucoseLevel</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.combinedData)
                                        {
                                            <tr>
                                                <td>@item.BloodGlucoseLevel</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>



                            </div>

                            
                            <div class="col-4 mb-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col"> Temperature</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.combinedData)
                                        {
                                            <tr>
                                                <td>@item.Temperature</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>



                            </div>


                            

                           
                            
                            
                            

                       
                    </div>
                </form>
            </div>




        </section>


            <!-- Prescription Form -->
            <section class="mt-5">

                <div class="form-container">

                    <form>
                        <h2 class="form-title"><h2 class="text-center">Prescription</h2></h2>
                        <div class="form-group row">

                            <div class="col-4 mb-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col"> Administration Instructions</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.combinedData)
                                        {
                                            <tr>
                                                <td>@item.Take</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>




                    <div class="col-4 mb-3">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col"> Urgent</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.combinedData)
                                {
                                    <tr>
                                        <td>@item.Urgency</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                    







                    
                              
                          
                    </form>

            <a asp-action="MedicationDispensed" asp-controller="Pharmacist" class="btn btn-danger ">Dispense</a>
            <a asp-action="RejectScript" asp-controller="Pharmacist" class="btn btn-primary">Reject</a>
            <a asp-action="ViewAllActivePrescriptionsPage" asp-controller="Pharmacist" class="btn btn-primary ">Back</a>
                </div>
            </section>

        

        
