@{
    ViewData["Title"] = "Individual Prescription";
    Layout = "_LayoutPharmacist";
}





<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient List</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

    <!-- jQuery -->
    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- DataTables JS -->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <style>
        .form-container {
            padding: 20px;
            border: 1px solid #dee2e6;
            border-radius: .375rem;
            margin-bottom: 20px;
        }

        .form-title {
            text-align: center;
            margin-bottom: 20px;
        }

        .container-fluid {
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <h1><center>Prescription View</center></h1>




    <!--Medical History and Vitals History side by side-->
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row">
                <!-- Medical History Form -->
                <div class="col-md-6">
                    <div class="form-container">
                        <h2 class="form-title">Medical History</h2>
                        <form>
                            <div class="form-group">
                                <label for="patientName">Patient Name</label>
                                <input type="text" class="form-control" id="patientName" placeholder="Jin" style="width:100%" readonly>
                            </div>
                            <div class="form-group">
                                <label for="patientSurname">Patient Surname</label>
                                <input type="text" class="form-control" id="patientSurname" placeholder="Woo" style="width:100%" readonly>
                            </div>
                            <div class="form-group">
                                <label for="allergies">Allergies</label>
                                <textarea class="form-control" id="allergies" rows="2" readonly>Disprin
Penicillin</textarea>
                            </div>
                            <div class="form-group">
                                <label for="conditions">Conditions</label>
                                <textarea class="form-control" id="conditions" rows="2" readonly>Acne
Diabetes</textarea>
                            </div>
                            <div class="form-group">
                                <label for="currentMedications">Current Medications</label>
                                <textarea class="form-control" id="currentMedications" rows="2" readonly>Diazepem
Aspirin</textarea>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Vitals History Form -->
                <div class="col-md-6">
                    <div class="form-container">
                        <h2 class="form-title">Vitals History</h2>
                        <form>
                            <div class="form-group">
                                <label for="systolicBP">Systolic BP (mmHg)</label>
                                <input type="text" class="form-control" id="systolicBP" style="width:100%" readonly>
                            </div>
                            <div class="form-group">
                                <label for="diastolicBP">Diastolic BP (mmHg)</label>
                                <input type="text" class="form-control" id="diastolicBP" style="width:100%" readonly>
                            </div>
                            <div class="form-group">
                                <label for="bloodOxygen">Blood Oxygen (%)</label>
                                <input type="text" class="form-control" id="bloodOxygen" style="width:100%" readonly>
                            </div>
                            <div class="form-group">
                                <label for="respirationRate">Respiration Rate (Breaths/min)</label>
                                <input type="text" class="form-control" id="respirationRate" style="width:100%" readonly>
                            </div>
                            <div class="form-group">
                                <label for="bloodGlucose">Blood Glucose Level (mg/dL)</label>
                                <input type="text" class="form-control" id="bloodGlucose" style="width:100%" readonly>
                            </div>
                            <div class="form-group">
                                <label for="temperature">Temperature (°C)</label>
                                <input type="text" class="form-control" id="temperature" style="width:100%" readonly>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Prescription Form -->
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row">
                <div class="col">
                    <div class="form-container">
                        <h2 class="form-title">Prescription</h2>
                        <form>
                            <div class="form-group">
                                <label for="prescriptionPatientName">Patient Name</label>
                                <input type="text" class="form-control" id="prescriptionPatientName" placeholder="Jin" style="width:100%" readonly>
                            </div>
                            <div class="form-group">
                                <label for="prescriptionPatientSurname">Patient Surname</label>
                                <input type="text" class="form-control" id="prescriptionPatientSurname" placeholder="Woo" style="width:100%" readonly>
                            </div>
                            <div class="form-group">
                                <label for="prescriptionDate">Prescription Date</label>
                                <input type="text" class="form-control" id="prescriptionDate" placeholder="14/05/2024" style="width:100%" readonly>
                            </div>
                            <div class="form-group">
                                <label for="surgeon">Surgeon</label>
                                <input type="text" class="form-control" id="surgeon" placeholder="Jack Black" style="width:100%" readonly>
                            </div>
                            <div class="form-group">
                                <label for="urgent">Urgent</label>
                                <input type="text" class="form-control" id="urgent" placeholder="Yes" style="width:100%" readonly>
                            </div>
                            <div class="form-group">
                                <label for="medicationsPrescribed">Medications Prescribed</label>
                                <textarea class="form-control" id="medicationsPrescribed" rows="2" readonly>Cephalexin
Diazepam</textarea>
                            </div>
                            <div class="form-group">
                                <label for="administrationInstructions">Administration Instructions</label>
                                <textarea class="form-control" id="administrationInstructions" rows="10" readonly>Administer 2 Cephalexin 2 times a day before eating.

Administer 1 Diazepam 2 times a day after eating.</textarea>
                            </div>
                            <div class="form-group">
                                <a class="btn btn-danger btn-lg" data-toggle="modal" data-target="#MedicationDispensedModal">Dispense</a>
                                <a asp-action="RejectScript" asp-controller="Pharmacist" class="btn btn-primary btn-lg">Reject</a>
                                <a asp-action="ViewAllActivePrescriptionsPage" asp-controller="Pharmacist" class="btn btn-primary btn-lg">Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Modal for dispensing medication-->
    <div class="modal fade" id="MedicationDispensedModal" tabindex="-1" role="dialog" aria-labelledby="MedicationDispensedModal" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="MedicationDispensedModal"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>









                <!-- Reject Script Modal -->
                        <div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="rejectModalLabel">Confirm Script Rejection</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to reject this script?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <button type="button" class="btn btn-danger" id="confirmRejectButton">Yes, Reject</button>
                                    </div>
                                </div>
                            </div>
                        </div>







        </main>
    </div>

   


</body>

 <script>
        $(document).ready(function () {
            // Show the modal when the discharge button is clicked
            $('#rejecteButton').click(function () {
                $('#rejectModal').modal('show');
            });

            // Close the modal when cancel or close button is clicked
            $('.btn-secondary, .close').click(function () {
                $('#rejectModal').modal('hide');
            });

            // Perform the discharge operation when 'Yes, Discharge' is clicked
            $('#confirmRejectButton').click(function () {
                // Hide the modal
                $('#rejectModal').modal('hide');

                // Perform any additional actions here, like submitting a form or updating the UI
                alert('Script rejected successfully.');
            });
        });
 <script>



</html>







