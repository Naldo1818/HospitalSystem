@{
    ViewData["Title"] = "Prescription Rejection";
    Layout = "_LayoutPharmacist";
}

<!DOCTYPE html>
<html lang="en">

    <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <style>
        .modal-header, .modal-footer {
            border: none;
        }

            .modal-footer button {
                min-width: 100px;
            }
    </style>
       </head>


<body>
     <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">

                        <form>
                            <h2><center>Reject Script</center></h2>

                            <div class="form-group row">
                            <div class="col-4">
                                <br>
                                <label for="exampleFormControlInput1" class="form-label">Patient Name</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Jin" style=" width:300px" readonly>

                            </div>

                            <div class="col-4">
                                <br>
                                <label for="exampleFormControlInput1" class="form-label">Patient Surname</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Woo" style=" width:300px" readonly>

                            </div>
                            
                        </div>

                            <div class="col-4">
                                <br />
                                <label for="exampleFormControlInput1" class="form-label">Please state reason for rejection.</label>

                                <textarea name="large-text-area" rows="10" cols="50">
                                   
                                </textarea>

                            </div>


                            <div class="form-group row">

                                <div class="col-4">
                                    <br>

                                    <a asp-action="ConfirmScriptRejectionPage" asp-controller="Pharmacist" class="btn btn-primary">Reject</a>
                                    <a asp-action="ViewSpecificPrescription" asp-controller="Pharmacist" class="btn btn-primary">Cancel</a>

                                </div>

                                <!-- Modal -->
                                <div class="modal fade" id="RejectScriptModal" tabindex="-1" aria-labelledby="RejectScriptModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="RejectScriptModalLabel">Confirm Script Rejection</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to reject this script?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                <button type="button" class="btn btn-danger" id="confirmDischargeButton">Yes, Reject</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                               
                          

                            </div>

                           

                           


                            

                          
                            
    
    
</form>
    
</div>
    
</div>
    

</div>

</main>


</div>
    <script>
        $(document).ready(function () {
            // Show the modal when the reject button is clicked
            $('#RejectScriptButton').click(function () {
                $('#RejectScriptModal').modal('show');
            });

            // Close the modal when cancel or close button is clicked
            $('.btn-secondary, .close').click(function () {
                $('#dischargeModal').modal('hide');
            });

            // Perform the discharge operation when 'Yes, Discharge' is clicked
            $('#confirmDischargeButton').click(function () {
                // Hide the modal
                $('#dischargeModal').modal('hide');

                // Perform any additional actions here, like submitting a form or updating the UI
                alert('Patient discharged successfully.');
            });
        });
    </script>

    
  
</body>
</html>


