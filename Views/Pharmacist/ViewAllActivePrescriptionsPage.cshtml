@{
    ViewData["Title"] = "AllActivePrescriptions";
    Layout = "_LayoutPharmacist";
}

@model DEMO.ViewModels.PrescriptionListViewModal
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription</title>
</head>
<body>
    
    <!--Table-->
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:auto ;display:none" id="prescribedRow">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <h2><center>Active Prescrptions</center></h2>
                        <table id="prescribedTable" class="display" style="width:100%">
                            <thead>
                                <tr>
                                    <th scope="col">Patient Name</th>
                                    <th scope="col">Patient Surname</th>
                                    <th scope="col">Surgeon</th>
                                    <th scope="col">Date Given</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Urgent</th>
                                    <th scope="col">Prescription</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Data in Model.AllPrescribed)
                                {
                                    <tr>
                                        
                                        <td>@Data.Name</td>
                                        <td>@Data.Surname</td>
                                        <td>@Data.DateGiven</td>
                                        <td>@Data.Urgency</td>
                                        <td>@Data.Take</td>
                                        <td>@Data.Status</td>
                                        

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Pharmacist" asp-action="PharmacistHomePage">Back</a>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>