@{
    ViewData["Title"] = "AllActivePrescriptions";
    Layout = "_LayoutPharmacist";
}



@model IEnumerable<DEMO.ViewModels.ViewActivePrescriptionsModel> 
``

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription</title>
</head>
<body>

    <!--Table-->
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Patient Name</th>
                                    <th scope="col">Patient Surname</th>
                                    <th scope="col">Surgeon</th>
                                    <th scope="col">Date Given</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Urgent</th>
                                    <th scope="col">Prescription</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.patientInfo.Name</td>
                                        <td>@item.patientInfo.Surname</td>
                                       
                                        <td>@($"{item.accounts.Name} {item.accounts.Surname}")</td>


                                        

                                        <td>@item.prescription.DateGiven</td>
                                        <td>@item.prescription.Status</td>
                                        <td>@item.prescription.Urgency</td>
                                        <td>@item.prescription.Take</td>
                                        
                                        
                                    </tr>
                                }
                                
                            </tbody>
                        </table>
                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Pharmacist" asp-action="PharmacistHomePage">Back</a>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>