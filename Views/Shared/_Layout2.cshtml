<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PAGE1</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site2.css" rel="stylesheet">
</head>
<body>

    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
          
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
              <a class="navbar-brand" href="#">Website Name</a>
        </div>
    </nav>

    <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
        <div class="offcanvas-header">
            <h3 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Main Menu</h3>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">

                    <a class="nav-link active" aria-hidden="true" asp-controller="Home" asp-action="SurgeonHome" style="font-size: 1.3rem;">Home</a>

                    <a class="nav-link active" aria-hidden="true" asp-controller="Home" asp-action="PatientList" style="font-size: 1.3rem;">Patient List</a>

                    <a class="nav-link active" aria-hidden="true" asp-controller="Home" asp-action="ListSurgery" style="font-size: 1.3rem;">Surgery List</a>

                    <a class="nav-link active" aria-hidden="true" asp-controller="Home" asp-action="PrescriptionList" style="font-size: 1.3rem;">Prescription List</a>

                    <a class="nav-link active" aria-hidden="true" asp-controller="Home" asp-action="patientAddmision" style="font-size: 1.3rem;">Addmisions list</a>
                </li>
            </ul>
       </div>
    </div>

    <div class="container-fluid">
        <main role="main" >
			<div class="row">
                <div class="col-md-9" align="left">
                    @RenderBody()
                </div>
                <div class="col-md-3 d-flex justify-content-end" align="right">
                    <div class="card mt-5 custom-card" style="width:250px">
                        <img src="https://via.placeholder.com/150" class="card-img-top mx-auto mt-3 rounded-circle" alt="Placeholder Image" style="width: 100px; height: 100px;">
                        <div class="card-body">
                            <h5 class="card-title text-center">Surgeon</h5>
                            <h5 class="card-title text-center">John Doe</h5>
                            <p class="card-text text-center">Email: john.doe@example.com</p>
                            <hr>
                            <br>
                            <p class="card-text text-center">Prescriptions Prescribed</p>
                            <p class="card-text text-center">1</p>
                            <p class="card-text text-center">Prescriptions Accepted</p>
                            <p class="card-text text-center">2</p>
                            <p class="card-text text-center">Prescriptions Rejected</p>
                            <p class="card-text text-center">1</p>
                            <br>
                            <hr>
                            <br>
                            <p class="card-text text-center">Surgeries For Today</p>
                            <p class="card-text text-center">2</p>
                            <hr>
                            <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="Index">Log Out</a>
                        </div>
                    </div>
                </div>
               
            </div>
        </main>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>