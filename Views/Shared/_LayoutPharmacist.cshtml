<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PAGE1</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site2.css" rel="stylesheet">

    
</head>
<body>

    <!--Navbar-->
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid d-flex justify-content-between">
            <button class="navbar-toggler order-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand order-1" href="#">Website Name</a>

        </div>
    </nav>

    <!--Notification dashboard
      -->

    <div class="container" style="float:right">
        <main role="main" class="">
            <div class="row">
                <div class="col-md-9" >
    @RenderBody()
                </div>
                <div class="card mt-5 custom-card" style="width:200px">

                    <div class="card-body">
                        <h5 class="card-title text-center">Logged in as Pharmacist</h5>
                        <h5 class="card-title text-center">John Doe</h5>
                        <br>
                        <br>
                        <hr>
                        <br>
                        <p class="card-text text-center">Active prescriptions</p>
                        <p class="card-text text-center">2</p>
                       <center>
                            <a asp-action="ViewAllActivePrescriptionsPage" asp-controller="Pharmacist" class="btn btn-primary btn-lg">View</a>
                       </center>


                        <hr>
                    </div>
                </div>
            </div>
        </main>
    </div>



    

    <!--Left Sidebar-->
    <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Pharmacist Main Menu</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">
                    <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="PharmacistHomePage">Home</a>
                    <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="ViewAllActivePrescriptionsPage">View all active prescriptions</a>
                    <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="ManageMedicationStockPage">Manage medication stock</a>
                    <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="ViewDailyUsageReport">View daily stock usage report</a>
                    <a class="nav-link active" aria-hidden="true" asp-controller="Home" asp-action="Index">Log out</a>

                </li>
            </ul>
        </div>
    </div>
   


  
    

  
    


    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>