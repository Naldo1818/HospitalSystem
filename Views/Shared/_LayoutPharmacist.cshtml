<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PAGE1</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site3.css" rel="stylesheet">

    
</head>



<body>

    <!--Navbar brand-->
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid d-flex justify-content-between">
            <button class="navbar-toggler order-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand order-1" href="#">Apollo+</a>

        </div>
    </nav>

    <!--Notification dashboard
      -->

    <div class="container" style="float:right">
        <main role="main" class="">
            <div class="row">
                <div class="col-md-9" >
    @RenderBody()
                </div>
                <div class="card mt-5 custom-card" style="width:200px">

                    <div class="card-body">
                        <h5 class="card-title text-center">Logged in as Pharmacist: </h5>
                        <p>@ViewBag.UserName @ViewBag.UserSurname</p>

                      <br />
                      
                     

                        <br>
                        <p class="card-text text-center">Active prescriptions</p>
                        
                       
                        
                        <br>

                        <p class="card-text text-center">Received stock</p>
                     
                       


                        <hr>
                    </div>
                </div>
            </div>
        </main>
    </div>



    

    <!--Left Main Menu Sidebar-->
    <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Pharmacist Main Menu</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">
                   
                 <br />

                    <strong>
                        <header>DISPENSING</header>
                    </strong>
            
                    <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="ViewAllPrescriptions">View all prescriptions</a>
                    <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="ViewAllActivePrescriptionsPage">View open prescriptions</a>

                    <br />

                    <strong>
                        <header>STOCK CONTROL</header>
                    </strong>
                   
                    <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="AddMedication">Add Medication</a>
                    <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="ViewAddedMedication">View Added Medication</a>

                    
                    
                    <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="StockOrderPage">Order Stock</a>
                    <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="ViewAllOrders">View Stock Orders</a>
                    <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="IncomingStockPage">View Received Stock and Update Current levels</a>
@*                     <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="ViewCurrentLevels">View Current levels</a>
 *@



                    
                    <a class="nav-link active" aria-hidden="true" asp-controller="Pharmacist" asp-action="Report">Report</a>
                    
                    
                    
                    <br />
                    <a class="nav-link active" aria-hidden="true" asp-controller="Home" asp-action="Index">Log out</a>

                </li>
            </ul>
        </div>
    </div>
   


  
    

  
    


    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js">
        
    </script>


   
</body>
</html>