@{
    var userName = Context.Session.GetString("UserName");
    var userSurname = Context.Session.GetString("UserSurname");
    var userEmail = Context.Session.GetString("UserEmail");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apollo+</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site2.css" rel="stylesheet">
</head>
<body>
    <style>

        .custom-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            margin-top: 15px; /* Reduced margin-top to move the card higher */
        }

            .custom-card img {
                width: 100px;
                height: 100px;
            }

        .card-body {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .card-text {
            margin: 5px 0;
        }

        

        .sideBar {
            margin-top: -1rem;
        }

    </style>
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
           
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" style="font-size: 24px; font-family: 'Arial'" href="#">Apollo+</a>
        </div>
    </nav>

    <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
        <div class="offcanvas-header">
            <h3 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Main Menu</h3>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">

                    <a class="nav-link active" aria-hidden="true" asp-controller="Admin" asp-action="AdminHome" style="font-size: 1.3rem;">Home</a>

                    <a class="nav-link active" aria-hidden="true" asp-controller="Admin" asp-action="ListUser" style="font-size: 1.3rem;">User </a>

               

                    <a class="nav-link active" aria-hidden="true" asp-controller="Admin" asp-action="ListTreatmentCodes" style="font-size: 1.3rem;">Treatment Codes </a>

                
                </li>
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        <main role="main" class="">
			<div class="row">
                <div class="col-md-9" align="left">
                    @RenderBody()
                </div>
                <div class="col-md-3 d-flex justify-content-end" align="right">
				<div class="card mt-5 custom-card" style="width:250px">
                        <img src="~/css/user.png" class="card-img-top mx-auto mt-3 rounded-circle" alt="Placeholder Image" style="width: 100px; height: 100px;">
					<div class="card-body">
                        <h5 class="card-title text-center">Admin</h5>
                            <h4 class="card-title">@ViewBag.UserName @ViewBag.UserSurname</h4>
                            <p class="card-text">Email: @ViewBag.UserEmail</p>
						<br>
						<br>
						<hr>
						<br>
                        <p class="card-text text-center">Number of Accounts</p>
                            <p class="card-text">@ViewBag.TotalUsers</p>
						<p class="card-text text-center">Number of Medication</p>
                            <p class="card-text">@ViewBag.TotalMedications</p>
						<p class="card-text text-center">Number of Treatment Codes</p>
                            <p class="card-text">@ViewBag.TotalTreatmentCodes</p>
						<hr>
                            <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="Index">Log Out</a>
					</div>
				</div>
             </div>
                
               
            </div>
        </main>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>