@{
    ViewData["Title"] = "Prescription";
    Layout = "_Layout2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription</title>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">

                        <form>
                            <div class="form-group row">

                            </div>

                            <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput1" class="form-label">Medication Name</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Medication Name" style=" width:300px">
                                </div>
                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput1" class="form-label">Quantity/Packs</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter Amount" style=" width:300px">
                                </div>
                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput2" class="form-label">Status</label>
                                    <select input class="form-control" placeholder="Status" style=" width:300px">
                                        <option value="Send">Send</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput2" class="form-label">Urgency</label>
                                    <select input class="form-control" placeholder="Urgency" style=" width:300px">
                                        <option value="Yes">Yes</option>
                                        <option value="No">No</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">

                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput1" class="form-label">Take</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="2" style=" width:300px">
                                </div>
                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput1" class="form-label">Day Amount</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="3" style=" width:300px">
                                </div>
                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput2" class="form-label">Eat</label>
                                    <select input class="form-control" placeholder="Priority" style=" width:300px">
                                        <option value="Before">Before</option>
                                        <option value="After">After</option>
                                        <option value="_">_</option>
                                    </select>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <button class="btn btn-danger" style=" width:70px" type="submit" asp-action="Index" asp-controller="Home">Back</button>
                                    <button class="btn btn-primary" style=" width:70px" type="submit">Add</button>
                                </div>
                            </div>
                            <!-- More form inputs can be added here -->
                        </form>
                    </div>
                </div>
            </div>
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <!-- Your table content here -->
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Surname</th>
                                    <th scope="col">Allergy</th>
                                    <th scope="col">Medication Name</th>
                                    <th scope="col">ActiveIngredient</th>
                                    <th scope="col">AllergyCheck</th>
                                    <!-- More table headers can be added here -->
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Jin</td>
                                    <td>Woo</td>
                                    <td>
                                        <button type="submit" asp-action="Page1" asp-controller="Home" class="btn btn-primary">
                                            Book Surgery
                                        </button>
                                    </td>
                                    <!-- More table data can be added here -->
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
