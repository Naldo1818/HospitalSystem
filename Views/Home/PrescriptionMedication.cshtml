@{
    ViewData["Title"] = "Add Medication";
    Layout = "_Layout2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Medication</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Sidebar -->
    <div class="offcanvas offcanvas-start text-bg-dark"  tabindex="-1" id="offcanvasSidebar" aria-labelledby="offcanvasSidebarLabel">
        <div class="offcanvas-header">
            <h3 id="offcanvasSidebarLabel">Patient Information</h3>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">
                    <p style="font-size: 1.2rem;">Name: Jin Woo</p>
                </li>
                <li class="nav-item">
                    <p style="font-size: 1.2rem;">ID Number: 0120526958</p>
                </li>
                <li class="nav-item">
                    <p style="font-size: 1.2rem;">Gender: Male</p>
                </li>

                <li class="nav-item">
                    <p style="font-size: 2rem;">_______________________</p>
                </li>

                <li class="nav-item">
                   <p>Medical History</p>
                    <p>Conditions  - None</p>
                    <p>Allergies - None</p>
                    <p>Current Medication - None</p>
                </li>
                <li class="nav-item">
                    <p style="font-size: 2rem;">_______________________</p>
                </li>

                <li class="nav-item">
                    <p style="font-size: 1.2rem;">Latest Vitals</p>
                    <div style="max-height: 300px; overflow-y: auto;">
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Time </th>
                                <th scope="col">Height</th>
                                <th scope="col">Weight</th>
                                <th scope="col">Temperature</th>
                                <th scope="col">Blood Pressure</th>
                                <th scope="col">Pulse Rate</th>
                                <th scope="col">Respiratory Rate</th>
                                <th scope="col">Blood Oxygen</th>
                                <th scope="col">Blood Glucose Level</th>
                                <th scope="col">Vitals High Limit</th>
                                <th scope="col">Vitals Low Limit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>2024-05-14</td>
                                <td>08:00</td>
                                <td>175 cm</td>
                                <td>70 kg</td>
                                <td>36.5°C</td>
                                <td>120/80 mmHg</td>
                                <td>80 bpm</td>
                                <td>16 breaths/min</td>
                                <td>98%</td>
                                <td>90 mg/dL</td>
                                <td>140/90 mmHg</td>
                                <td>90/60 mmHg</td>
                            </tr>
                        </tbody>
                    </table>
                </li>
              </ul>
        </div>
    </div>

    <div id="main" class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <form>
                            <h2>Add Medication</h2>
                            <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <label for="searchTreatmentInput" class="form-label">Medication Name Filter</label>
                                    <input type="text" class="form-control" id="searchTreatmentInput" placeholder="Medication Name Filter" style="width:300px" oninput="filterTreatmentNames()">
                                </div>

                                <div class="col-4">
                                    <br>
                                    <label for="treatmentSelect" class="form-label">Medication Name Selected</label>
                                    <select class="form-control" id="treatmentSelect" style="width:300px">
                                        <option value="Cephalexin">Cephalexin</option>
                                        <option value="Diazepem">Diazepem</option>
                                        <option value="Ibiprofen">Ibiprofen</option>
                                        <option value="Tylenol">Tylenol</option>
                                        <option value="Oxycodone">Oxycodone</option>
                                        <option value="Hydrocodone">Hydrocodone</option>
                                        <option value="Ciprofloxacin">Ciprofloxacin</option>
                                        <option value="Zofran">Zofran</option>
                                    </select>
                                </div>
                                <script>
                                    function filterTreatmentNames() {
                                        const filter = document.getElementById('searchTreatmentInput').value.toLowerCase();
                                        const select = document.getElementById('treatmentSelect');
                                        const options = select.getElementsByTagName('option');

                                        for (let i = 0; i < options.length; i++) {
                                            const option = options[i];
                                            const text = option.text.toLowerCase();
                                            if (text.includes(filter)) {
                                                option.style.display = '';
                                            } else {
                                                option.style.display = 'none';
                                            }
                                        }
                                    }
                                </script>

                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput1" class="form-label">Quantity/Units</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter Amount" style=" width:300px">
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput1" class="form-label">Instructions</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter Instructions" style="width:800px">
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <a class="btn btn-danger" aria-hidden="true" asp-controller="Home" asp-action="Prescription">Back</a>
                                </div>
                                <div class="col-4">
                                    <br>
                                    <button class="btn btn-primary" style="width:70px" type="submit">Add</button>
                                </div>
                                <div class="col-4">
                                    <br>
                                    <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar">Patient Info</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <table id="example" class="table display">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Surname</th>
                                    <th scope="col">Prescription Date</th>
                                    <th scope="col">Medication Name</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Instructions</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Jin</td>
                                    <td>Woo</td>
                                    <td>02/05/2024</td>
                                    <td>Cephalexin</td>
                                    <td>1</td>
                                    <td>Please take once every 5 hours</td>
                                    <td><a class="btn btn-danger" aria-hidden="true">Remove</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                        <div class="col-4">
                            <a class="btn btn-primary" aria-hidden="true" style="width:70px" asp-controller="Home" asp-action="SurgeonHome">Save</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>
</html>
