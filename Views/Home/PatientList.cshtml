                                <input type="time" class="form-control" id="surgeryTime" style="width:250px">
                            </div>
                            <div class="col-4">
                                <br>
                                <label for="theater" class="form-label">Theater</label>
                                <select class="form-control" id="theater" style="width:200px">
                                    <option value="Theater 1">Theater 1</option>
                                    <option value="Theater 2">Theater 2</option>
                                    <option value="Theater 3">Theater 3</option>
                                </select>
                            </div>
                            <div class="col-4">
                                <br>
                                <label for="AdmissionStatus" class="form-label">Admission Status</label>
