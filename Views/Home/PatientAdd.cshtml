@{
    ViewData["Title"] = "Add Patient";
    Layout = "_Layout2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Patient</title>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">

                        <form>
                            <h2>Add Patient</h2>
                            <div class="form-group row">

                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput1" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter Name" style=" width:300px">
                                </div>
                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput1" class="form-label">Surname</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter Surname" style=" width:300px">
                                </div>
                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput1" class="form-label">ID Number</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter ID Number" style=" width:300px">
                                </div>
                            </div>


                            <div class="form-group row">

                                <div class="col-4">
                                    <br>
                                    <label for="gender" class="form-label">Gender</label>
                                    <div id="gender" class="form-control" style="width:300px; padding: 10px;">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gender" id="male" value="Male">
                                            <label class="form-check-label" for="male">Male</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gender" id="female" value="Female">
                                            <label class="form-check-label" for="female">Female</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput2" class="form-label">Email</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter Email" style=" width:300px">
                                </div>
                              
                            </div>

                            <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="PatientList">Save</a>
                                </div>
                            </div>

                            <!-- More form inputs can be added here -->
                        </form>
                    </div>
                </div>
            </div>

        </main>
    </div>
</body>
</html>
