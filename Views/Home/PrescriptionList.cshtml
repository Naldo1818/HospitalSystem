@{
    ViewData["Title"] = "Prescription List";
    Layout = "_Layout2";
}
@model DEMO.ViewModels.PrescriptionListViewModal
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription List</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

    <!-- jQuery -->
    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- DataTables JS -->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Align items to the top */
            min-height: 100vh;
            background-color: #f0f0f0;
            padding-top: 100px; /* Increased padding to push content down */
        }

        /* Center the modal vertically and horizontally */
        .modal-dialog-centered {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: calc(100vh - 1rem); /* Adjust height to accommodate for Bootstrap's padding */
        }

        /* Ensure modal content does not stretch too wide */
        .modal-content {
            width: 180%;
            max-width: 900px;
        }

        /* Center content inside modal body */
        .modal-body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:auto">
                <div class="col">
                    <div class="p-3 mt-5 border" style="background-color: white;">
                        <form>
                            <h2>Prescription Page</h2>
                            <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <label for="searchInput" class="form-label">Name or Surname</label>
                                    <input type="text" class="form-control" id="searchInput" placeholder="Name or Surname" style="width:300px">
                                </div>
                            </div>
                            <div class="form-group row mt-3">
                                <div class="col-12">
                                    <button type="button" id="showRejected" class="btn btn-secondary">Show Rejected</button>
                                    <button type="button" id="showAccepted" class="btn btn-secondary">Show Accepted</button>
                                    <button type="button" id="showPrescribed" class="btn btn-secondary">Show Prescribed</button>
                                    <button type="button" id="showAll" class="btn btn-secondary">Show All</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row" style="width:auto ;display:none" id="rejectedRow">
                <div class="col">
                    <div class="p-3 mt-5 border" style="background-color: white;">
                        <h2>Prescription Rejected</h2>
                        <table id="rejectedTable" class="display" style="width:100%">
                            <thead>
                                <tr>
                                   
                                    <th scope="col">Name</th>
                                    <th scope="col">Surname</th>
                                    <th scope="col">Prescription Date</th>
                                    <th scope="col">Pharmacist Name</th>
                                    <th scope="col">Pharmacist Surname</th>
                                    <th scope="col">Urgency</th>
                                    <th scope="col">Take</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Rejected Reason</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Data in Model.AllPrescribedRejected)
                                {
                                    <tr>

                                        <td>@Data.PatientName</td>
                                        <td>@Data.PatientSurname</td>
                                        <td>@Data.DateGiven</td>
                                        <td>@Data.AccountName</td>
                                        <td>@Data.AccountSurname</td>
                                        <td>@Data.Urgency</td>
                                        <td>@Data.Take</td>
                                        <td>@Data.Status</td>
                                        <td>@Data.RejectionReason</td>
                                        
                                        <td>
                                            <button class="btn btn-primary" data-toggle="modal" data-target="#medicationModal">
                                                Check Prescription
                                            </button>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row" style="width:auto;display:none" id="acceptedRow">
                <div class="col">
                    <div class="p-3 mt-5 border" style="background-color: white;">
                        <h2>Prescription Dispensed</h2>
                        <table id="acceptedTable" class="display" style="width:100%">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Surname</th>
                                    <th scope="col">Prescription Date</th>
                                    <th scope="col">Pharmacist Name</th>
                                    <th scope="col">Pharmacist Surname</th>
                                    <th scope="col">Urgency</th>
                                    <th scope="col">Take</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Data in Model.AllPrescribedDispensed)
                                {
                                    <tr>

                                        <td>@Data.PatientName</td>
                                        <td>@Data.PatientSurname</td>
                                        <td>@Data.DateGiven</td>
                                        <td>@Data.AccountName</td>
                                        <td>@Data.AccountSurname</td>
                                        <td>@Data.Urgency</td>
                                        <td>@Data.Take</td>
                                        <td>@Data.Status</td>
                                        <td>
                                            <button class="btn btn-primary" data-toggle="modal" data-target="#medicationModal">
                                                Check Prescription
                                            </button>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row" style="width:auto ;display:none" id="prescribedRow">
                <div class="col">
                    <div class="p-3 mt-5 border" style="background-color: white;">
                        <h2>Prescription Prescribed</h2>
                        <table id="prescribedTable" class="display" style="width:100%">
                            <thead>
                                <tr>
                                   
                                    <th scope="col">Name</th>
                                    <th scope="col">Surname</th>
                                    <th scope="col">Prescription Date</th>
                                    <th scope="col">Urgency</th>
                                    <th scope="col">Take</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                 @foreach (var Data in Model.AllPrescribed)
                                {
                                    <tr>
                                     
                                        <td>@Data.Name</td>
                                        <td>@Data.Surname</td>
                                        <td>@Data.DateGiven</td>
                                        <td>@Data.Urgency</td>
                                        <td>@Data.Take</td>
                                        <td>@Data.Status</td>
                                        <td>
                                            <button class="btn btn-primary" data-toggle="modal" data-target="#medicationModal">
                                                Check Prescription
                                            </button>
                                            <a class="btn btn-primary ml-2" href="@Url.Action("ChangeMedication", "Home")">
                                                Edit Prescription
                                            </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="medicationModal" tabindex="-1" role="dialog" aria-labelledby="medicationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="medicationModalLabel">Medication Interaction Check</h5>
                </div>
                <div class="modal-body">
                    <table class="table" id="example">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Surname</th>
                                <th scope="col">Prescription Date</th>
                                <th scope="col">Allergy</th>
                                <th scope="col">Medication Name</th>
                                <th scope="col">Medication Active Ingredient</th>
                                <th scope="col">Active Ingredient</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Jin</td>
                                <td>Woo</td>
                                <td>02/05/2024</td>
                                <td>Penicillin</td>
                                <td>Cephalexin</td>
                                <td>Penicillin</td>
                                <td>Cannot give Patient</td>
                                <td>
                                    <div class="d-flex">
                                        <a class="btn btn-primary mr-2" href="@Url.Action("ChangeMedication", "Home")">Change Medication</a>
                                        <a class="btn btn-danger" aria-hidden="true">Remove</a>
                                    </div>
                                </td>
                            </tr>
                            <!-- More table data can be added here -->
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $(document).ready(function () {
                // Initialize DataTables
                var rejectedTable = $('#rejectedTable').DataTable({
                    "language": {
                        "zeroRecords": "No matching records found"
                    }
                });

                var acceptedTable = $('#acceptedTable').DataTable({
                    "language": {
                        "zeroRecords": "No matching records found"
                    }
                });

                var prescribedTable = $('#prescribedTable').DataTable({
                    "language": {
                        "zeroRecords": "No matching records found"
                    }
                });

                // Custom search function for the search input
                $('#searchInput').on('keyup', function () {
                    var searchText = this.value.trim(); // Trim whitespace
                    if (searchText === '') {
                        $('#rejectedRow').show();
                        $('#acceptedRow').show();
                        $('#prescribedRow').show();
                    } else {
                        rejectedTable.search(searchText).draw();
                        acceptedTable.search(searchText).draw();
                        prescribedTable.search(searchText).draw();

                        if (rejectedTable.page.info().recordsDisplay === 0) {
                            $('#rejectedRow').hide();
                        } else {
                            $('#rejectedRow').show();
                        }

                        if (acceptedTable.page.info().recordsDisplay === 0) {
                            $('#acceptedRow').hide();
                        } else {
                            $('#acceptedRow').show();
                        }

                        if (prescribedTable.page.info().recordsDisplay === 0) {
                            $('#prescribedRow').hide();
                        } else {
                            $('#prescribedRow').show();
                        }
                    }
                });

                // Button click handlers
                $('#showRejected').on('click', function () {
                    $('#rejectedRow').show();
                    $('#acceptedRow').hide();
                    $('#prescribedRow').hide();
                });

                $('#showAccepted').on('click', function () {
                    $('#acceptedRow').show();
                    $('#rejectedRow').hide();
                    $('#prescribedRow').hide();
                });

                $('#showPrescribed').on('click', function () {
                    $('#prescribedRow').show();
                    $('#rejectedRow').hide();
                    $('#acceptedRow').hide();
                });

                $('#showAll').on('click', function () { // New button click handler
                    $('#rejectedRow').show();
                    $('#acceptedRow').show();
                    $('#prescribedRow').show();
                });
            });

            // Button click handlers
            $('#showRejected').on('click', function () {
                $('#rejectedRow').show();
                $('#acceptedRow').hide();
                $('#prescribedRow').hide();
            });

            $('#showAccepted').on('click', function () {
                $('#acceptedRow').show();
                $('#rejectedRow').hide();
                $('#prescribedRow').hide();
            });

            $('#showPrescribed').on('click', function () {
                $('#prescribedRow').show();
                $('#rejectedRow').hide();
                $('#acceptedRow').hide();
            });
        });
    </script>
</body>
</html>


