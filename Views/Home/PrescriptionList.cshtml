@{
    ViewData["Title"] = "Prescription List";
    Layout = "_Layout2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription List</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <style>
        #example {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">

                        <form>
                            <h2>Prescription List</h2>
                               <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <label for="searchInput" class="form-label">Name or Surname</label>
                                    <input type="text" class="form-control" id="searchInput" placeholder="Name or Surname" style="width:300px">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <!-- Your table content here -->
                        <table id="example" class="display" style="width:100%">
                            <thead>
                                <tr>
                                    
                                    <th scope="col"> ID number</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Surname</th>
                                    <th scope="col">Prescription Date</th>
                                    <th scope="col">Pharmacist</th>
                                    <th scope="col">Priority</th>
                                    <th scope="col">Rejection Reason</th>
                                    <th scope="col">Actions</th>
                                    <!-- More table headers can be added here -->
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>0120526958</td>
                                    <td>Jin</td>
                                    <td>Woo</td>
                                    <td>02/05/2024</td>
                                    <td>Sam Smith</td>
                                    <td>Invalid</td>
                                    <td>Medication found that effects Patient</td>
                                    <td>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="MedicationInteraction"> Check Prescription</a>
                                    </td>

                                    <!-- More table data can be added here                                              -->
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                "language": {
                    "zeroRecords": "No matching records found"
                }
            });

            // Custom search function for the search input
            $('#searchInput').on('keyup', function () {
                var searchText = this.value.trim(); // Trim whitespace
                if (searchText === '') {
                    $('#example').hide(); // Hide table if search input is empty
                } else {
                    $('#example').show(); // Show table if search input is not empty
                    table.search(searchText).draw();
                    if (table.page.info().recordsDisplay === 0) {
                        $('#example').hide();
                    }
                }
            });
        });
    </script>
</body>
</html>
