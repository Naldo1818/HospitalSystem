@{
    ViewData["Title"] = "Admissions List";
    Layout = "_Layout2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admissions List</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <style>
        #example {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <form>
                            <h2>Admissions List</h2>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label for="searchInput" class="form-label">Name or Surname</label>
                                    <input type="text" class="form-control" id="searchInput" placeholder="Name or Surname" style="width:300px">
                                </div>
                                <div class="col-4">
                                    <label for="dateInput" class="form-label">Date</label>
                                    <input type="date" class="form-control" id="dateInput" style="width:300px">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <table id="example" class="display" style="width:100%">
                            <thead>
                                <tr>
                                    <th scope="col">ID Number</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Surname</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Time</th>
                                    <th scope="col">Ward</th>
                                    <th scope="col">Bed</th>
                                    <th scope="col">Number</th>
                                    <th scope="col">Nurse FullName</th>
                                    <th scope="col">Admission Status</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>0120526958</td>
                                    <td>Jin</td>
                                    <td>Woo</td>
                                    <td>2024-06-14</td>
                                    <td>08:00 AM</td>
                                    <td>Cardiology</td>
                                    <td>101</td>
                                    <td>12345</td>
                                    <td>Ariana Grande</td>
                                    <td>Yes</td>
                                    <td>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="CheckTreatmentCode">Check Treatment Codes</a>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="vitalsAndHistory">Check Vitals and Medical History</a>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="vitalsAndHistory">Admission Status Change</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                "language": {
                    "zeroRecords": "No matching records found"
                }
            });

            $('#searchInput, #dateInput').on('keyup change', function () {
                var searchText = $('#searchInput').val().trim();
                var dateText = $('#dateInput').val();
                var dateFilter = dateText ? '^' + dateText + '$' : '';

                table.column(3).search(dateFilter, true, false);
                table.search(searchText).draw();

                if (searchText === '' && dateText === '') {
                    $('#example').hide();
                } else {
                    $('#example').show();
                    if (table.page.info().recordsDisplay === 0) {
                        $('#example').hide();
                    }
                }
            });
        });
    </script>
</body>
</html>
