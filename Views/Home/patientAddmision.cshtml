                                    <td>07:30 AM</td>
                                    <td>Cardiology</td>
                                    <td>101</td>
                                    <td>Ariana Grande</td>
                                    <td>
                                        <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#treatmentModal">
                                            Show Treatment Codes
                                        </a>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="vitalsAndHistory">Check Vitals and Medical History</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>0120526958</td>
                                    <td>Jin</td>
                                    <td>Can</td>
                                    <td>07/13/2024</td>
                                    <td>AM</td>
                                    <td>07:30 AM</td>
                                    <td>Cardiology</td>
                                    <td>101</td>
                                    <td>Ariana Grande</td>
                                    <td>
                                        <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#treatmentModal">
                                            Show Treatment Codes
                                        </a>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="vitalsAndHistory">Check Vitals and Medical History</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <!-- Treatment Modal -->
    <div class="modal fade" id="treatmentModal" tabindex="-1" aria-labelledby="treatmentModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="treatmentModalLabel">Treatment Codes</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Table with treatment names and codes -->
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Treatment Name</th>
                                <th scope="col">Code</th>
                            </tr>
                        </thead>
                        <tbody id="treatmentTableBody">
                            <tr>
                                <td>Drainage of Abscess</td>
                                <td>10060</td>
                            </tr>
                            <tr>
                                <td>Debridement</td>
                                <td>11400</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="CheckTreatmentCode">Edit</a>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                "language": {
                    "zeroRecords": "No matching records found"
                }
            });

            // Function to filter the table
            function filterTable() {
                var searchText = $('#searchInput').val().trim();
                var dateText = $('#dateInput').val();

                // If dateText is empty, no filtering is applied
                table.column(3).search(dateText ? dateText : '', true, false);
                table.search(searchText).draw();

                // Show or hide table based on search results
                if (searchText === '' && dateText === '') {
                    $('#example').hide();
                } else {
                    $('#example').show();
                    if (table.page.info().recordsDisplay === 0) {
                        $('#example').hide();
                    }
                }
            }

            // Event listeners for search and date input changes
            $('#searchInput, #dateInput').on('keyup change', filterTable);

            // Initial filter to apply on page load if there are pre-existing values
            filterTable();
        });
    </script>
</body>
</html>
