@{
    ViewData["Title"] = "Surgery List";
    Layout = "_Layout2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Surgery List</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <style>
        #example {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <form id="searchForm">
                            <h2>Surgery List</h2>
                            <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <label for="searchInput" class="form-label">Name or Surname</label>
                                    <input type="text" class="form-control" id="searchInput" placeholder="Name or Surname" style="width:300px">
                                </div>
                                <div class="col-4">
                                    <br>
                                    <label for="dateInput" class="form-label">Date</label>
                                    <input type="date" class="form-control" id="dateInput" style="width:300px">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">
                        <table id="example" class="display" style="width:100%">
                            <thead>
                                <tr>
                                    <th scope="col">ID number</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Surname</th>
                                    <th scope="col">Surgeon Name</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>0120526958</td>
                                    <td>Jin</td>
                                    <td>Woo</td>
                                    <td>John Doe</td>
                                    <td>2024-05-25</td>
                                    <td>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="EditSurgery">Edit Book Surgery</a>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="Prescription">Edit Treatment Codes</a>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="Prescription">Give Prescription</a>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="vitalsAndHistory">Check Vitals and Medical History</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>0120526959</td>
                                    <td>Rob</td>
                                    <td>Dee</td>
                                    <td>John Doe</td>
                                    <td>2024-06-14</td>
                                    <td>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="EditSurgery">Edit Book Surgery</a>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="Prescription">Edit Treatment Codes</a>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="Prescription">Give Prescription</a>
                                        <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="vitalsAndHistory">Check Vitals and Medical History</a>
                                    </td>
                                </tr>
                                <!-- Add more table rows here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                "language": {
                    "zeroRecords": "No matching records found"
                }
            });

            // Custom search function for the search input and date input
            $('#searchInput, #dateInput').on('keyup change', function () {
                var searchText = $('#searchInput').val().trim(); // Trim whitespace
                var dateText = $('#dateInput').val(); // Get date value
                var dateFilter = dateText ? '^' + dateText + '$' : ''; // Format date filter for exact match

                table.column(3).search(dateFilter, true, false); // Apply date filter to the Date column (index 3)
                table.search(searchText).draw(); // Apply text search to all columns

                if (searchText === '' && dateText === '') {
                    $('#example').hide(); // Hide table if both search inputs are empty
                } else {
                    $('#example').show(); // Show table if either search input is not empty
                    if (table.page.info().recordsDisplay === 0) {
                        $('#example').hide();
                    }
                }
            });
        });
    </script>
</body>
</html>
