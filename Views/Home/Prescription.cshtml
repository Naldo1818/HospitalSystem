@{
    ViewData["Title"] = "Prescription";
    Layout = "_Layout2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription</title>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="row" style="width:1000px">
                <div class="col">
                    <div class="p-3 mt-5 border">

                        <form>
                            <h2>Prescription</h2>
                            <div class="form-group row">

                                    <div class="col-4">
                                        <br>
                                        <label for="exampleFormControlInput1" class="form-label">Name</label>
                                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Jin" style=" width:300px">
                                    </div>
                                    <div class="col-4">
                                        <br>
                                        <label for="exampleFormControlInput1" class="form-label">Surname</label>
                                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Woo" style=" width:300px">
                                    </div>
                                    <div class="col-4">
                                        <br>
                                        <label for="exampleFormControlInput2" class="form-label">Surgery Date</label>
                                        <input type="date" class="form-control" id="exampleFormControlInput2" placeholder="Enter Date" value="2024-05-08" style=" width:300px">
                                    </div> 
                                </div>
                                     

                                <div class="form-group row">
                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput2" class="form-label">Prescription Given Date</label>
                                    <input type="date" class="form-control" id="exampleFormControlInput2" placeholder="Enter Date" value="2024-05-08" style=" width:300px">
                                </div>
                            </div>

                            
                            <div class="col-4">
                                <br>
                                <label for="Urgency" class="form-label">Urgency</label>
                                <div id="Urgency" class="form-control" style="width:300px; padding: 10px;">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Urgency" id="Yes" value="Yes">
                                        <label class="form-check-label" for="Yes">Yes</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Urgency" id="No" value="No">
                                        <label class="form-check-label" for="No">No</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">

                                <div class="col-4">
                                    <br>
                                    <label for="exampleFormControlInput2" class="form-label">Status</label>
                                    <select input class="form-control" placeholder="Status" style=" width:300px">
                                        <option value="Prescribed">Prescribed</option>
                                       
                                    </select>
                                </div>
                            </div>

                                <div class="form-group row">
                                    <div class="col-4">
                                        <br>
                                    <a class="btn btn-danger" aria-hidden="true" asp-controller="Home" asp-action="ListSurgery">Back</a>

                                    <a class="btn btn-primary" aria-hidden="true" asp-controller="Home" asp-action="PrescriptionMedication">Next</a>

                                    </div>
                                </div>
                                <!-- More form inputs can be added here -->
                        </form>
                    </div>
                </div>
            </div>
          
        </main>
    </div>
</body>
</html>
